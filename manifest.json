{
  "manifest_version": 3,
  "name": "Mafalda",
  "version": "3.7.1",
  "description": "Asistente para redactar mensajes MELI apoyado en guía + OpenAI y análisis de adjuntos.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://script.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Mafalda",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}

